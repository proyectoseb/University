<?xml version="1.0" encoding="utf-8"?>
<!--
Responsive Grid: You can customize class suffix.
	col-lg		: Large devices Desktops 			 			  (≥1200px)
	col-md		: Medium devices Desktops  			 			  (≥922px)
	col-sm 		: Small devices Tablets				 			  (≥768px)
	col-xs 		: Extra small devices Phones	     			  (<768px)
	
Support Classes : The solution is hidden module and position on desktop,tablets & mobile. You can add class suffix.
	hidden-lg	: Hidden on Large devices Desktops 			  (≥1200px)
	hidden-md	: Hidden on Medium devices Desktops  		  (≥922px)
	hidden-sm 	: Hidden on Small devices Tablets			  (≥768px)
	hidden-xs 	: Hidden on Extra small devices Phones	      (<768px)
	
Example: Set columns  on Mobile, tablet, desktops
	Use the extra small and medium device grid classes by adding .col-xs-* .col-md-* to your columns. 
	The full description of the syntax is available on the classes (http://getbootstrap.com/css/#grid) 
-->

<layout type="mlr">	
	
	<groups>
		<group class="col-md-3 col-sm-12" >right</group>
		<group class="col-md-3 col-sm-12" >left</group>
		<group
			class="col-md-6" 
			noright-class="col-md-9"
			noleft-class="col-md-9"
			noleftright-class="col-sm-12">main</group>
	</groups>
	<blocks>			
		
		<header html5tag="header" order="1" id="yt_header" >
			<positions>
				<position class="col-md-8 hidden-sm hidden-xs"  type="modules"  >top1</position>	
				<position class="col-md-4 "  type="modules" style="ytmod" >top2</position>
			</positions>
		</header>
		<menu html5tag="nav" order="2" id="yt_menuwrap">
			<positions>
				<position class="col-md-3 col-sm-12"  type="feature">@logo</position>
				<position class="col-md-9 col-sm-12 " type="feature">@mainmenu</position>
			</positions>
		</menu>
		<spotlight1 html5tag="section" order="3" id="yt_spotlight1">
			<positions>
				<position class="col-sm-12"  type="modules" >slideshow</position>
			</positions>
		</spotlight1>
		<spotlight2 html5tag="section" order="4" id="yt_spotlight2">
			<positions>
				<position class="col-sm-12"  type="modules" style="ytmod" >top3</position>
			</positions>
		</spotlight2>
		<breadcrumb html5tag="section" order="5" id="yt_breadcrumb">
			<positions>
				<position   class="col-sm-12" type="modules"  style="ytmod" >breadcrumb</position>
			</positions>
		</breadcrumb>
		<content html5tag="section" order="6" id="content">
			<positions>
				<position group="left" type="modules"  style="ytmod" >left</position>
				<position group="main"  type="message"></position>
				<position group="main"  type="modules" style="ytmod" >maintop3</position>
				<position group="main"  type="component">component</position>
				<position group="right" type="modules"  style="ytmod" >right</position>
			</positions>
		</content>
		<spotlight3 html5tag="section" order="7" id="yt_spotlight3">
			<positions>
				<position class="col-lg-9 col-sm-8 "  type="modules" style="ytmod" >top4</position>
				<position class="col-lg-3 col-sm-4 "  type="modules" style="ytmod" >top5</position>
			</positions>
		</spotlight3>
		<spotlight4 html5tag="section" order="8" id="yt_spotlight4">
			<positions>
				<position class="col-sm-12"  type="modules" style="ytmod" >top6</position>
			</positions>
		</spotlight4>
		<spotlight5 html5tag="section" order="9" id="yt_spotlight5">
			<positions>
				<position class="col-lg-6 col-sm-12"  type="modules" style="ytmod" >top7</position>
				<position class="col-lg-3 col-sm-6"  type="modules" style="ytmod">top8</position>
				<position class="col-lg-3 col-sm-6"  type="modules" style="ytmod">top9</position>
			</positions>
		</spotlight5>
		<spotlight6 html5tag="section" order="10" id="yt_spotlight6">
			<positions>
				<position class="col-sm-12"  type="modules" style="ytmod" >top10</position>
			</positions>
		</spotlight6>
		<spotlight7 html5tag="section" order="11" id="yt_spotlight7">
			<positions>
				<position class="col-md-9 col-sm-12"  type="modules" style="ytmod" >top11</position>
				<position class="col-md-3 col-sm-12"  type="modules" style="ytmod" >top12</position>
			</positions>
		</spotlight7>
		<spotlight8 html5tag="section" order="12" id="yt_spotlight8">
			<positions>
				<position class="col-md-3 col-sm-6"  type="modules" style="ytmod">bottom1</position>
				<position class="col-md-3 col-sm-6"  type="modules" style="ytmod">bottom2</position>
				<position class="col-md-2 col-sm-6"  type="modules" style="ytmod">bottom3</position>
				<position class="col-md-4 col-sm-6"  type="modules" style="ytmod">bottom4</position>
			</positions>
		</spotlight8>
		<footer html5tag="footer" order="13" id="yt_footer">
			<positions>
				<position class="col-sm-12" type="feature">@copyright</position>					
			</positions>
		</footer>												
	</blocks>
</layout>		